# your domain, e.g https://example.com
APP_URL={{ duplicati_environment_variable_app_url }}
PORT={{ duplicati_container_http_port }}

# minimum of 32 characters. Generate one with: openssl rand -hex 32
APP_SECRET={{ duplicati_environment_variable_app_secret }}

JWT_TOKEN_EXPIRES_IN={{ duplicati_environment_variable_jwt_token_expires_in }}

DATABASE_URL={{ duplicati_environment_variable_database_url }}
REDIS_URL={{ duplicati_environment_variable_redis_url }}

# options: local | s3
STORAGE_DRIVER={{ duplicati_environment_variable_storage_driver }}

{% if duplicati_environment_variable_storage_driver == 's3' %}
# S3 driver config
AWS_S3_ACCESS_KEY_ID={{ duplicati_environment_variable_aws_s3_access_key_id }}
AWS_S3_SECRET_ACCESS_KEY={{ duplicati_environment_variable_aws_s3_secret_access_key }}
AWS_S3_REGION={{ duplicati_environment_variable_aws_s3_region }}
AWS_S3_BUCKET={{ duplicati_environment_variable_aws_s3_bucket }}
AWS_S3_ENDPOINT={{ duplicati_environment_variable_aws_s3_endpoint }}
AWS_S3_FORCE_PATH_STYLE={{ duplicati_environment_variable_aws_s3_force_path_style | to_json }}
{% endif %}

# default: 50mb
FILE_UPLOAD_SIZE_LIMIT={{ duplicati_environment_variable_file_upload_size_limit }}

{% if duplicati_mailer_enabled %}
# options: smtp | postmark
MAIL_DRIVER={{ duplicati_environment_variable_mail_driver }}
MAIL_FROM_ADDRESS={{ duplicati_environment_variable_mail_from_address }}
MAIL_FROM_NAME={{ duplicati_environment_variable_mail_from_name }}

{% if duplicati_environment_variable_mail_driver == "smtp" %}
# SMTP driver config
SMTP_HOST={{ duplicati_environment_variable_smtp_host }}
SMTP_PORT={{ duplicati_environment_variable_smtp_port }}
SMTP_USERNAME={{ duplicati_environment_variable_smtp_username }}
SMTP_PASSWORD={{ duplicati_environment_variable_smtp_password }}
SMTP_SECURE={{ duplicati_environment_variable_smtp_secure | to_json }}
SMTP_IGNORETLS={{ duplicati_environment_variable_smtp_ignoretls | to_json }}

{% elif duplicati_environment_variable_mail_driver == "postmark" %}
# Postmark driver config
POSTMARK_TOKEN={{ duplicati_environment_variable_postmark_token }}
{% endif %}
{% endif %}

# for custom drawio server
DRAWIO_URL={{ duplicati_environment_variable_drawio_url }}

DISABLE_TELEMETRY={{ duplicati_environment_variable_disable_telemetry | to_json }}

{{ duplicati_environment_variables_additional_variables }}
